[Unit]
Description=Breedhub Interconnect Daemon

[Service]
Type=forking
ExecStart=/usr/bin/node /usr/bin/bhid start
ExecStop=/usr/bin/node /usr/bin/bhid stop
PIDFile=/var/run/bhid/bhid.pid
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bhid
User=root
Group=root

[Install]
WantedBy=multi-user.target
